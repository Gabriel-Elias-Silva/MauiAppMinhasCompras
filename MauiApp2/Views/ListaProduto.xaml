<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Views.ListaProduto"
             Title="Lista de Produtos">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Novo" Clicked="ToolbarItem_Clicked"/>
        <ToolbarItem Text="Total" Clicked="ToolbarItemTotal_Clicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10">

        <SearchBar x:Name="txt_search"
                   Placeholder="Pesquisar produtos"
                   TextChanged="txt_search_TextChanged"/>

        <ListView x:Name="lst_produtos">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Descricao}"
                              Detail="{Binding Preco}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>
